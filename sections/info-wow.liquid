
{% schema %}
{
  "name": "Introduction",
  "settings": [
	{
		"id": "heading",
		"type": "text",
		"label": "Heading",
		"default": "Title"
	},
	  {
      "type": "image_picker",
      "id": "people_image",
      "label": "People"
    },
	{
		"id": "text",
		"type": "textarea",
		"label": "Text",
		"default": "Add your text here"
	}
  ]
}
{% endschema %}

<section class="contents text-center text-sm-left pt-100 pt-lg-140" id="image-with-text">
  <div class="container">
    <div class="row justify-content-between align-items-center">
      <div class="col-12">
        {% if section.settings.heading %} 
        <div class="ml--20">
        <h2 id="box" class="d-inline-block box-rotate-c-1 mb-20">
	        {{ section.settings.heading | escape }}  
        </h2>
        </div>
        {% endif %}
        <h4>
          {{ section.settings.text | escape | newline_to_br }}
        </h4>
      </div>
    </div>
  </div>
</section>


    