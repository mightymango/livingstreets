{% schema %}
{
  "name": "Partners",
  "settings": [
	{
		"id": "text",
		"type": "textarea",
		"label": "Text",
		"default": "Add your text here"
	},
	    {
	   "type": "radio",
	   "id": "text_position",
	   "options": [
	      { "value": "left", "label": "Left"},
	      { "value": "right", "label": "Right"}
	   ],
	   "label": "Text position"
	},
		{
		"id": "link_text",
		"type": "text",
		"label": "Link text",
		"default": "Learn more"
	},
		{
		"id": "link_url",
		"type": "url",
		"label": "Link"
	}
  ],
  "presets": [
    {
      "name": "Partners",
      "category": "Info"
    }
  ]
}
{% endschema %}

<section class="contents text-center text-lg-left pt-60 pt-lg-100 pb-50 pb-lg-100" id="contents-3">
