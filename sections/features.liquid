{% schema %}
  {
    "name": "Features",
    "max_blocks": 8,
    "settings": [
      {
        "id": "headline",
        "type": "text",
        "label": "Headline",
        "default": "Title"
      },
	  {
		  "type": 	"checkbox",
		  "id": 	"coloured_background",
		  "label": 	"Coloured background",
		  "default":false
	}
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Feature",
        "settings": [
          {
		   "type": "select",
		   "id": "bullet_image",
		   "options": [
		      { "value": "check-36.svg", "label": "Checkmark"},
		      { "value": "", "label": "None"}
		   ],
		   "label": "Hero Image"
		},
          {
            "id": "name",
            "type": "text",
            "label": "Name"
          },
          {
            "id": "info",
            "type": "textarea",
            "label": "Text"
          }
        ]
      }
    ],
  "presets": [
    {
      "name": "Features",
      "category": "Info"
    }
  ]
  }
{% endschema %}

    <section class="features {% if section.settings.coloured_background %}bg-light {% endif %}pt-60 pt-lg-100 pb-20 pb-lg-60" id="features-3">
        <div class="container">
            {%- if section.settings.heading -%}
            <h1 class="text-center mb-40 mb-lg-60">{{ section.settings.headline | escape}}</h1>
			{%- endif -%}
            <div class="row">
	            
	            {% for block in section.blocks %}
	            <div class="col-12 col-sm-6 col-lg-3 d-flex mb-40" {{ block.shopify_attributes }}>
                    <div class="mr-15">{% if block.settings.bullet_image %}<img src="{{ block.settings.bullet_image | asset_url }}" alt="">{% endif %}</div>

                    <div>
                        <h3 class="mb-10">{{ block.settings.name | escape }}</h3>

                        <p>{{ block.settings.info | escape }}</p>
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </section>
