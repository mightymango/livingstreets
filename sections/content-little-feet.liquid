	   },
      {
      "type": "image_picker",
      "id": "people_image_1",
      "label": "People 1"
      },
      {
      "type": "image_picker",
      "id": "people_image_2",
      "label": "People 2"
      },  
      {
        "id": "name1",
        "type": "text",
        "label": "Feature 1 : Name"
      },
      {
        "id": "info1",
        "type": "textarea",
        "label": "Feature 1 : Text"
      },
      {
        "id": "name2",
