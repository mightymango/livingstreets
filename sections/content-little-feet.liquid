      },
      {
        "id": "name4",
        "type": "text",
        "label": "Feature 4 : Name"
      },
      {
        "id": "info4",
        "type": "textarea",
        "label": "Feature 4 : Text"
      }
    ]
  },
  
  {
  "type": "related",
  "name": "Related Items",
  "settings": [
	{
		"id": "heading",
		"type": "text",
		"label": "Heading",
		"default": "Add your text here"
	},
	{
	   "type": "collection",
	   "id": "feature_collection",
	   "label": "Feature collection"
	},
	{
	  "type": 	"checkbox",
	  "id": 	"scrolling",
	  "label": 	"Scrolling",
	  "default":true
	}
  ]
}, 

  
  {
  "type" : "purchase",
  "name": "Purchase",
  "settings": [
	 {
	      "type": "image_picker",
	      "id": "buy_image",
	      "label": "Image"
	    },
	{
		"id": "heading",
		"type": "text",
		"label": "Subheading",
		"default": "Subheading"
	},
