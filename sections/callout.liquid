{% schema %}
{
  "name": "Call Out,
  "settings": [
	{
		"id": "text",
		"type": "textarea",
		"label": "Text",
		"default": "Add your text here"
	},
	{
	  "type": 	"checkbox",
	  "id": 	"coloured_background",
	  "label": 	"Coloured background",
	  "default":true
	}
  ],
  "presets": [
    {
      "name": "Call Out",
      "category": "Info"
    }
  ]
}
{% endschema %}

    <section class="contents {% if section.settings.coloured_background %}bg-light {% endif %}text-center p-60 p-lg-100" id="callout">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-8 col-lg-8">
                    <img class="mb-40" src="{{ 'star-54.svg' | asset_url }}" alt="">

                    <h4>{{ section.settings.text | escape }}</h4>
                </div>
            </div>
        </div>
    </section>
    
    