<div class="col-12 col-sm-6 col-lg-3 mb-15 mb-sm-30">
	<a href="{{ product.url }}">
    <div class="panel h-400 with-overlay p-30 d-flex justify-content-center">
        <div class="align-self-end">
            <img class="mb-70 image-box" src="{{ product | img_url: 'x150'}}" alt="">

            <div class="pl-10 pr-10 title-box"><h3>{{ product.title }}</h3></div>
 
            <p>{{ product.price | money }}</p>
            
            <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
        </div>

        <div class="with-overlay__content d-flex justify-content-center">
            <div class="align-self-center ph-30">
                
                <h3 class="mb-10">{{ product.title }}</h3>
                <div class="mb-20" itemprop="description">{{ product.description | truncatewords: 10 }}</div>

                <p class="mb-60">{{ product.price | money }}</p><a href="{{ product.url }}" class="btn btn-small">More information</a>
            </div>
        </div>
    </div>
	</a>
</div>
