
   <section class="grids {% if block.settings.coloured_background %}bg-light {% endif %}pt-60 pb-20 pt-lg-100 pb-lg-30 text-center text-sm-left" id="features4">
        <div class="container">

	        {%- if block.settings.headline -%}
            <h1 class="text-center mb-40 mb-lg-60">{{ block.settings.headline | escape}}</h1>
			{%- endif -%}
					        
            <div class="row">
                {%- if block.settings.name1 -%}
                <div class="col-12 col-sm-6 mb-40 mb-lg-70">
                    <h3 id="tape" class="mb-20 tape-thin tape-box-orange tape-green tape-rotate-c-3 {{ block.settings.tape_type }}"><span class="">{{ block.settings.name1 | escape }}</span></h3>

                    <h4>{{ block.settings.info1 | escape }}</h4>
                </div>
                {%- endif -%}
                {%- if block.settings.name2 -%}
                <div class="col-12 col-sm-6 mb-40 mb-lg-70">
                    <h3 id="tape" class="mb-20 tape-thin tape-box-pink tape-yellow tape-rotate-c-1 {{ block.settings.tape_type }}"><span class="">{{ block.settings.name2 | escape }}</span></h3>

                    <h4>{{ block.settings.info2 | escape }}</h4>
                </div>
                {%- endif -%}
                {%- if block.settings.name3 -%}
                <div class="col-12 col-sm-6 mb-40 mb-lg-70">
                    <h3 id="tape" class="mb-20 tape-thin tape-box-green tape-orange tape-rotate-a-1 {{ block.settings.tape_type }}"><span class="">{{ block.settings.name3 | escape }}</span></h3>

                    <h4>{{ block.settings.info3 | escape }}</h4>
                </div>
                {%- endif -%}
                {%- if block.settings.name4 -%}
                <div class="col-12 col-sm-6 mb-40 mb-lg-70">
                    <h3 id="tape" class="mb-20 tape-thin tape-box-yellow tape-pink tape-rotate-c-3 {{ block.settings.tape_type }}"><span class="">{{ block.settings.name4 | escape }}</span></h3>

                    <h4>{{ block.settings.info4 | escape }}</h4>
                </div>
                {%- endif -%}
            </div>
        </div>
    </section>

