  height: 25px;
  margin-bottom: 2px;
  border-radius: 3px;
  line-height: 25px;
  color: RGBA(41, 127, 202, 0.50);
}

.stepper:hover {
  color: white; 
  background-color: RGBA(41, 127, 202, 0.8);
}

