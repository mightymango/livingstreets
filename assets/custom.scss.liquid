	.nav-tabs > li,
	.nav-tabs > li.active {
		margin: 0 20px 10px;
	}
	.nav-tabs > li::before,
	.nav-tabs > li::after,
	.nav-tabs > li.active::before,
	.nav-tabs > li.active::after {
		border-top-style: dotted;
	}
}
	
@media (max-width: $size-sm) {
	.nav-tabs > li,
	.nav-tabs > li.active {
		margin: 0 2px 10px;
	}
	.nav-tabs > li::before,
	.nav-tabs > li::after,
	.nav-tabs > li.active::before,
	.nav-tabs > li.active::after {
		display: none;
	}
	
	.nav-tabs.no-tracks > li,
	.nav-tabs.no-tracks > li.active {
		margin: 0 2px 10px;
	}
	
}


