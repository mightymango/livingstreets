/* ---- modal for cross-sell ---- */
.cross-sell-overlay {
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(0, 0, 0, 0.4);
	z-index: 1000;
	display:none;
}

.cross-sell {
  	opacity: 1;
  	height: 600px;
  	width: 800px;
  	position: absolute;
  	left: 50%;
  	margin-left: -400px;
  	top: 50%;
  	margin-top: -300px;
	background-color: rgba(255, 255, 255, 1.0);
	padding: 15px;
}

.cross-sell .instruction {
	position: absolute;	
	bottom: 0;
	left: 0;
	padding: 10px;
	opacity: 0.5;
}

.cross-sell .buttons {
	position: absolute;	
	bottom: 30px;
	left: 0;
	right: 0;
	padding: 20px;
	text-align: right;	
}


/* ---- accordion ---- */
.accordion-toggle {
	cursor: pointer;
}
.accordion-content {
	display: none;
	padding-top: 20px;
}
.accordion-content.default {
	display: block;
}

/* ---- fixed footer ---- */
footer {
	width: 100%;
	height: $footer-height;
	position: fixed;
	bottom: 0;
	z-index: -2;
	background-color: $color-green;
/*
	border-top-color: $color-white;
	border-top-width: 10px;
	border-top-style: dashed;
*/
}

html,
body {
	background-color: $color-white;
}

body {
	margin-bottom: 300px;
}

footer a:hover {
	color: $color-white;
	opacity: 0.8;
}

/* ---- credits ---- */
.designer {
	font-size: 0.75em;
	font-weight: 200;
	color: $color-black;
	opacity: 0.4;
}

.designer a {
	font-weight: 400;
	text-decoration: none;
}

.designer a:hover {
	color: $color-white;
}

#designer {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: -1;
}

/* ---- basket counter ---- */
a.cart { 
    overflow: hidden; 
    text-align: center;
}

a.cart span {
position: absolute;
text-align: center;
top: 0;
left:0;
right: 0;
color: $color-black;
font-size: 12px;
}


/* ---- placeholder ---- */
::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
  color: $color-green !important;
  opacity: 1 !important; /* Firefox */
}

:-ms-input-placeholder { /* Internet Explorer 10-11 */
  color: $color-green !important;
}

::-ms-input-placeholder { /* Microsoft Edge */
  color: $color-green !important;
}

