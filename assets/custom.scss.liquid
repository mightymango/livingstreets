  border-color: darken( $color-pink, $hover-change );
  background-color: darken( $color-pink, $hover-change );
  font-weight: 500;
}

.nav-img-left {
	position: absolute;
	left: 0;
	top: 0;
}

.nav-img-right {
	position: absolute;
	right: 0;
	top: 0;
}

.nav-tabs.no-tracks > li,
.nav-tabs.no-tracks > li.active {
	margin: 0 10px 10px;
}
.nav-tabs.no-tracks > li::before,
.nav-tabs.no-tracks > li::after,
.nav-tabs.no-tracks > li.active::before,
.nav-tabs.no-tracks > li.active::after {
	display: none;
}
	

