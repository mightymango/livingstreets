/* tape */
#tape{
position: relative; /*lets us later position the tape relative to the box*/
margin:20px; /*you need enough margin to accomodate the tape*/
background:#ffdc00;
padding:30px;
border-radius: $corner-radius;
/*add a small drop shadow to the box*/
-webkit-box-shadow: $shadow-size $shadow-size 3px 0px rgba(0,0,0,0.2);
-moz-box-shadow: $shadow-size $shadow-size 3px 0px rgba(0,0,0,0.2);
box-shadow: $shadow-size $shadow-size 3px 0px rgba(0,0,0,0.2);
}
#tape {
color:#000;
}


#tape.tape-box-green {
	background:$color-green;	
}
#tape.tape-box-pink {
	background:$color-pink;	
}
#tape.tape-box-orange {
	background:$color-orange;	
}
#tape.tape-box-yellow {
	background:$color-yellow;	
}
#tape.tape-box-black {
	background:$color-black;
	color:$color-white;	
}
#tape.tape-box-white {
	background:$color-white;
	color: $color-black;	
}

#tape:before, #tape:after{
content: ''; /*create a blank psuedo element, if you wanted something written on the tape, place it between the ' '*/
display: block;
position: absolute; /*positions the tape relative to the box created above rather than the whole page*/
background-color: $color-green; 
height: $tape-height; /*height of the tape*/
/*add a small drop shadow to the tape*/
-webkit-box-shadow: 0 4px 10px -4px rgba(0, 0, 0, .2);
-moz-box-shadow: 0 4px 10px -4px rgba(0, 0, 0, .2);
box-shadow: 0 4px 10px -4px rgba(0, 0, 0, .2);
border-radius: $corner-radius;
}


#tape.tape-green:before, #tape.tape-green:after{
	background-color: $color-green;	
}
#tape.tape-pink:before, #tape.tape-pink:after{
	background-color: $color-pink;	
}
#tape.tape-orange:before, #tape.tape-orange:after{
	background-color: $color-orange;	
}
#tape.tape-yellow:before, #tape.tape-yellow:after{
	background-color: $color-yellow;	
}
#tape.tape-black:before, #tape.tape-black:after{
	background-color: $color-black;	
}
#tape.tape-white:before, #tape.tape-white:after{
	background-color: $color-white;	
}

#tape:before { /*using :before places the tape on the left of the box*/
left:-10px; /*position from the left edge of the #tape div - a negative value moves the tape 5px to the left of the box's edge*/
top: -15px; /*position from the top edge of the #tape div - a negative value moves the tape 15px above of the box's edge*/
width: $tape-width; /*width of the tape*/
/*rotate the tape 12 degrees anti-clockwise*/
-webkit-transform: rotate(-12deg);
-moz-transform: rotate(-12deg);
-o-transform: rotate(-12deg);
-ms-transform: rotate(-12deg);
}

#tape:after { /*using :after places the tape on the right of the box*/
right:-20px; /*position from the left edge of the #tape div*/
top: -10px; /*position from the top edge of the #tape div - a negative value moves the tape 10px above of the box's edge*/
width: 103px; /*width of the tape*/
/*rotate the tape 20 degrees clockwise*/
-webkit-transform: rotate(20deg);
-moz-transform: rotate(20deg);
-o-transform: rotate(20deg);
-ms-transform: rotate(20deg);
}

#tape.tape-center:after {
	width: $tape-width * 0.8;
	height: $tape-height * 0.8;
	left: calc(50% - 25px);
	/*rotate the tape 4 degrees anti-clockwise*/
	-webkit-transform: rotate(-4deg);
	-moz-transform: rotate(-4deg);
	-o-transform: rotate(-4deg);
	-ms-transform: rotate(-4deg);	
}
#tape.tape-center:before {
	display: none;	
}

#tape.tape-thin {
	padding:10px;
	padding-left:20px;
	padding-right:20px;
	margin: 3px;
	display: inline-block;
	-webkit-box-shadow: $shadow-size-small $shadow-size-small 3px 0px rgba(0,0,0,0.2);
	-moz-box-shadow: $shadow-size-small $shadow-size-small 3px 0px rgba(0,0,0,0.2);
	box-shadow: $shadow-size-small $shadow-size-small 3px 0px rgba(0,0,0,0.2);	
}

#tape.tape-thin:before, #tape.tape-thin:after{
	height: $tape-height / $tape-scale;
}

#tape.tape-thin:before {
	left:-10px;
	top: -8px;
	width: $tape-width / $tape-scale;
	-webkit-transform: rotate(-16deg);
	-moz-transform: rotate(-16deg);
	-o-transform: rotate(-16deg);
	-ms-transform: rotate(-16deg);
}

#tape.tape-thin:after{
	top: -5px;
	right:-12px;
	width: $tape-width / $tape-scale;
}

